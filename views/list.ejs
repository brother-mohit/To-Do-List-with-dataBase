
<%-  include('header') -%>

 <div class="box" id="heading">
  <h1> <%=dayname%> </h1>
 </div>


 <div class="box">
   <% for(let i=0; i<newitems.length; i++) { %>

  <form  action="/delete" method="post">

    <div class="item">

        <input type="checkbox" name= "checkbox" value="<%=newitems[i]._id%>" onChange = "this.form.submit()">
         <p><%=newitems[i].item%></p>
    </div>

      <input type="hidden" name="listName" value="<%=dayname%>">



  </form>

 <% } %>



 <form class="item" action="/" method="post">

   <input type="text" name="item" placeholder="New Item">
   <button type="submit" name="listName" value= "<%=dayname%>">+</button>

 </form>

 </div>

<%-  include('footer') -%>
